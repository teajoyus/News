<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@null"
    android:gravity="bottom|center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="选择新闻列表排序"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rl_sort_hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:gravity="bottom|center_horizontal">

        <LinearLayout
            android:id="@+id/ll_sort_hot"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@null"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_love_sort_"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/more_window_item_margin"
                android:src="@drawable/love_hot"
                android:text="喜欢" />

            <ImageView
                android:id="@+id/iv_read_sort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/more_window_local"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/more_window_item_margin"
                android:src="@drawable/read_hot"
                android:text="阅读" />

            <ImageView
                android:id="@+id/iv_comment_sort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/more_window_online"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/more_window_item_margin"
                android:src="@drawable/commit_hot"
                android:text="评论" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sort_text_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_sort_hot"
            android:background="@null"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="喜欢" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="阅读" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="评论" />


        </LinearLayout>


        <ImageView
            android:id="@+id/center_music_window_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ll_sort_hot"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/sort_close" />

    </RelativeLayout>
</RelativeLayout>