<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0faeaeae"
    android:orientation="vertical">
    <ProgressBar
        android:id="@+id/pb_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"

        />
    <RelativeLayout
        android:id="@+id/rl_bar_user"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#4087BF"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >
        <ImageView
            android:id="@+id/iv_back_user"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/back"
            />
        <TextView
            android:id="@+id/tv_bar_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="编辑资料"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_bar_finish_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="完成"
            android:gravity="center"
            />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_phone_user"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/rl_bar_user"
    android:layout_marginTop="20dp"
    android:background="#ffffff"
    >
    <TextView
        android:id="@+id/tv_phone_user"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="手机号码"
        android:gravity="center"
        android:textColor="#b0000000"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/et_phone_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="15767976597"
        android:textColor="#e0000000"
        android:gravity="center|left"
        android:background="#00000000"
        android:textSize="18dp"
        android:layout_marginLeft="150dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#20000000"
        android:layout_alignParentBottom="true"
        ></View>


</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_name_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_phone_user"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="昵称"
            android:gravity="center"
            android:textColor="#b0000000"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/et_name_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="用户157****6597"
            android:textColor="#e0000000"
            android:gravity="center|left"
            android:background="#00000000"
            android:textSize="18dp"
            android:layout_marginLeft="150dp"  />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#20000000"
            android:layout_alignParentBottom="true"
            ></View>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_address_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_name_user"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_address_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="所在地"
            android:gravity="center"
            android:textColor="#b0000000"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/et_address_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="惠州"
            android:textColor="#e0000000"
            android:textSize="18dp"
            android:gravity="center|left"
            android:background="#00000000"
            android:layout_marginLeft="150dp"  />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#20000000"
            android:layout_alignParentBottom="true"
            ></View>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_email_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_address_user"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_email_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="邮箱"
            android:gravity="center"
            android:textColor="#b0000000"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/et_email_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" "
            android:textColor="#e0000000"
            android:textSize="18dp"
            android:gravity="center|left"
            android:background="#00000000"
            android:textColorHint="#20000000"
            android:layout_marginLeft="150dp"  />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#20000000"
            android:layout_alignParentBottom="true"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_pwd_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_email_user"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/tv_pwd_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="修改密码"
            android:gravity="center"
            android:textColor="#f0000000"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            />
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerVertical="true"
          android:src="@drawable/jiantou"
          android:layout_alignParentRight="true"
          android:layout_marginRight="15dp"
          />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#20000000"
            android:layout_alignParentBottom="true"
            ></View>


    </RelativeLayout>
</RelativeLayout>