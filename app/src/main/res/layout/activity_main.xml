<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <View
        android:id="@+id/divider_index"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#50000000"
        android:layout_above="@+id/tab_meun"
        ></View>
    <LinearLayout
        android:id="@+id/tab_meun"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_hightSize"
        android:layout_alignParentBottom="true"
        android:background="#20aeaeae"

        >

        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/search_image"
                    android:layout_width="@dimen/tab_imageSize"
                    android:layout_height="@dimen/tab_imageSize"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tab_imageMargin"
                    android:scaleType="fitXY"
                    android:src="@drawable/first_unselected" />

                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tab_textMargin"
                    android:textSize="@dimen/tab_textSize"
                    android:text="主页"
                     />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/monitor_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/monitor_image"
                    android:layout_width="@dimen/tab_imageSize"
                    android:layout_height="@dimen/tab_imageSize"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tab_imageMargin"
                    android:scaleType="fitXY"
                    android:src="@drawable/first_unselected" />

                <TextView
                    android:id="@+id/monitor_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tab_textMargin"

                    android:textSize="@dimen/tab_textSize"
                    android:text="热点"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myself_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/myself_image"
                    android:layout_width="@dimen/tab_imageSize"
                    android:layout_height="@dimen/tab_imageSize"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tab_imageMargin"
                    android:scaleType="fitXY"
                    android:src="@drawable/first_unselected" />

                <TextView
                    android:id="@+id/myself_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tab_textMargin"
                    android:textSize="@dimen/tab_textSize"
                    android:text="喜欢"
                     />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/more_image"
                    android:layout_width="@dimen/tab_imageSize"
                    android:layout_height="@dimen/tab_imageSize"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tab_imageMargin"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_unselected" />

                <TextView
                    android:id="@+id/more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tab_textMargin"
                    android:textSize="@dimen/tab_textSize"
                    android:text="个人"
                     />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider_index"
        ></FrameLayout>

</RelativeLayout>