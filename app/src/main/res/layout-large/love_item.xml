<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
   >


    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="60dp"
        android:background="#80000000" />



    <TextView
        android:id="@+id/show_time_love_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:text="测试数据"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view_0"
        android:layout_marginLeft="52dp"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="180dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="60dp"
        android:background="#80000000" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/timeline_content"
        android:layout_below="@+id/show_time_love_item"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image">

        <ImageView
            android:id="@+id/iv_love_item"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"

            android:src="@drawable/bg_green_circle_smic" />
<RelativeLayout
    android:id="@+id/rl_content_love"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/iv_love_item"
    >


        <TextView
            android:id="@+id/tv_title_love_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="测试数据"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tv_abstrated_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_love_item"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textSize="22sp"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="#70000000"
            />
</RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_below="@+id/rl_content_love"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"

            >
            <TextView
                android:id="@+id/read_love_item"
                style="@style/tv_love_item2"
                android:layout_alignParentLeft="true"
                android:text="阅读12"
                 />
            <TextView
                android:id="@+id/comment_love_item"
                style="@style/tv_love_item2"
                android:layout_toRightOf="@+id/read_love_item"
                android:layout_marginLeft="10dp"
                android:text="评论12"
                />
            <TextView
                android:id="@+id/love_love_item"
                style="@style/tv_love_item2"
                android:layout_toRightOf="@+id/comment_love_item"
                android:layout_marginLeft="10dp"
                android:text="喜欢12"
                />
            <TextView
                android:id="@+id/type_love_item"
                style="@style/tv_love_item2"
                android:layout_toRightOf="@+id/love_love_item"
                android:layout_marginLeft="20dp"
                android:text="类型：娱乐"
                />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>