<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv_number_user">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">#d0000000</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv_number_user2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">#d0000000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv_number_divider_user">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">#60000000</item>
    </style>
    <style name="tv_love_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#50000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv_love_item2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#50000000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="iv_user_item">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SpotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loadingâ€¦</item>
        <item name="DialogSpotCount">5</item>
    </style>
</resources>
